				<class>userknn</class>
				<similarity type="user">pcc</similarity>
				<neighborhood-size>
					<value>50</value>
					<value>100</value>
					<value>200</value>
				</neighborhood-size>
				<shrinkage>10</shrinkage>
			</alg>


<!-- RUN THIS FOR PYTHON-SIDE NDCG IMPLEMENTATION -->
        <metric>
            <ranking>true</ranking>
            <list-size>
            	<value>100</value>
