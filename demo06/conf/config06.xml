<!-- THIS IS MY CONFIGURATION FILE FOR RECSYS CLASS -->

<librec-auto>
        <!-- GLOBAL OPTIONS SECTION -->
        <random-seed>202001</random-seed>
        <thread-count>1</thread-count>
        <library src="system">default-algorithms.xml</library>

        <!-- DATA SECTION -->
        <!-- Note: data-dir is relative to the study directory -->
        <data>
            <data-dir>data</data-dir>
            <format>UIR</format>
            <data-file format="text">tiktok-ratings-small-sample.csv</data-file>
        </data>

       

        <!-- SPLITTER SECTION -->
        <splitter>
                <model>ratio</model>
                <dim>userfixed</dim>
                <ratio>0.8</ratio>
                <save>true</save>
        </splitter>


        <!-- ALGORITHM SECTION -->

